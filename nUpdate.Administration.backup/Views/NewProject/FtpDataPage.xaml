<Page
    x:Class="nUpdate.Administration.Views.NewProject.FtpDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:newProject1="clr-namespace:nUpdate.Administration.ViewModels.NewProject;assembly=nUpdate.Administration.ViewModels"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    d:DataContext="{d:DesignInstance newProject1:FtpDataPageViewModel}"
    d:DesignHeight="230"
    d:DesignWidth="520"
    Background="White"
    Loaded="FtpDataPage_OnLoaded"
    mc:Ignorable="d">
    <DockPanel Margin="20">
        <TextBlock
            DockPanel.Dock="Top"
            FontSize="12pt"
            Foreground="#003399"
            Text="Server over FTP(S)" />

        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />

                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="5"
                    Text="Host:" />
                <TextBox
                    mah:TextBoxHelper.Watermark="ftp.example.com"
                    x:Name="HostTextBox"
                    Grid.Row="0"
                    Grid.Column="2"
                    Padding="5,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="4"
                    Padding="5"
                    Text="Port:" />
                <mah:NumericUpDown Grid.Row="0"
                                   Grid.Column="6"
                                   HorizontalAlignment="Left"
                                   Minimum="0"
                                   Maximum="65536"
                                   Interval="1"
                                   Value="{Binding Port, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Padding="5"
                    Text="User:" />
                <TextBox
                    mah:TextBoxHelper.Watermark="user1@ftp.example.com"
                    x:Name="UserTextBox"
                    Grid.Row="2"
                    Grid.Column="2"
                    Padding="5,0,0,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="4"
                    Padding="5"
                    Text="Password:" />
                <PasswordBox
                    Grid.Row="2"
                    Grid.Column="6"
                    Padding="5,0,0,0"
                    VerticalContentAlignment="Center"
                    PasswordChanged="PasswordChanged" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Padding="5"
                    Text="Mode:" />
                <ComboBox
                    x:Name="ModeComboBox"
                    Grid.Row="4"
                    Grid.Column="2"
                    Padding="5,0,0,0"
                    VerticalContentAlignment="Center"
                    SelectedIndex="0" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="4"
                    Padding="5"
                    Text="SSL-Protocol:" />
                <ComboBox
                    x:Name="ProtocolComboBox"
                    Grid.Row="4"
                    Grid.Column="6"
                    Padding="5,0,0,0"
                    VerticalContentAlignment="Center"
                    SelectedIndex="0" />
            </Grid>

            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="5"
                    Text="Directory:" />
                <TextBox
                    mah:TextBoxHelper.Watermark="/htdocs/updates/"
                    x:Name="DirectoryTextBox"
                    Grid.Row="0"
                    Grid.Column="2"
                    Padding="5,0,0,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Directory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    Grid.Row="0"
                    Grid.Column="4"
                    Command="{Binding DirectoryButtonCommand}"
                    Content="..." />
            </Grid>
        </StackPanel>
    </DockPanel>
</Page>