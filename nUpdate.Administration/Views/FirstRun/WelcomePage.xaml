<Page x:Class="nUpdate.Administration.Views.FirstRun.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:firstRun="clr-namespace:nUpdate.Administration.ViewModels.FirstRun"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Welcome"
      d:DataContext="{d:DesignInstance firstRun:WelcomePageViewModel}"
      d:DesignHeight="230"
      d:DesignWidth="520"
      mc:Ignorable="d">

    <DockPanel Margin="20">
        <TextBlock DockPanel.Dock="Top"
                   FontSize="12pt"
                   Foreground="#003399"
                   Text="Welcome to nUpdate Administration!" />

        <TextBlock VerticalAlignment="Center"
                   Text="As this is the first time that you're starting nUpdate Administration, there are some preferences that you need to customize. This concerns the project file extension, your key database and some program specific paths. Please click on &quot;Forward&quot;."
                   TextWrapping="Wrap" />
    </DockPanel>
</Page>
